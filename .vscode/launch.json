{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend (ts-node)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": ["${workspaceFolder}/backend/src/app.ts"],
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend (compiled JS)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/build/app.js",
            "cwd": "${workspaceFolder}/backend",
            "preLaunchTask": "npm: build - backend",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/backend/build/**/*.js"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to Expo",
            "type": "reactnative",
            "request": "attach",
            "cwd": "${workspaceFolder}/MobileAppUI",
            "port": 8081
        },
        {
            "name": "Debug Android",
            "type": "reactnative",
            "request": "launch",
            "platform": "android",
            "cwd": "${workspaceFolder}/MobileAppUI",
            "enableDebug": true,
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/MobileAppUI/.expo"
        },
        {
            "name": "Debug iOS",
            "type": "reactnative",
            "request": "launch",
            "platform": "ios",
            "cwd": "${workspaceFolder}/MobileAppUI",
            "enableDebug": true,
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/MobileAppUI/.expo"
        }
    ],
    "compounds": [
        {
            "name": "ðŸš€ Full Stack Debug (Backend + Android)",
            "configurations": [
                "Debug Backend (ts-node)",
                "Debug Android"
            ],
            "presentation": {
                "order": 1
            },
            "stopAll": true
        },
        {
            "name": "ðŸ”— Attach to Running Services",
            "configurations": [
                "Debug Backend (ts-node)",
                "Attach to Expo"
            ],
            "presentation": {
                "order": 2
            },
            "stopAll": true
        }
    ]
}